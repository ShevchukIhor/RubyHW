<div id="product" class="container-fluid p-4 text-center text-bg-dark">
  <div class="row justify-content-center">
    <h1>Orders # <%= @order.id %></h1>
    <% if current_user %>
      <table class="table text-white">
    <%= render 'layouts/order' %>
      <tr>
        <td></td>
        <td></td>
        <td><b><%= @order.status %></b></td>
        <td></td>
        <td></td>
      </tr>
      </table>
      <%= button_to 'Confirm order', orders_confirm_path, method: :patch, class:'btn btn-success' if @order.unpaid? %>
    <% else %>
      <p>Currently no product in the cart</p>
    <% end %>
  </div>
</div>