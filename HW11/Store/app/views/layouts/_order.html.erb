
<tr>
  <td>#</td>
  <td>Image</td>
  <td>Name</td>
  <td>Quantity</td>
  <td>Price</td>
</tr>
<% @order.cart.line_items.each_with_index do |line_item, index| %>
  <tr>
    <td> <%= index + 1 %></td>
    <td>
      <% if line_item.product.image.blank? %>
        <%= image_tag image_url('no_image.png'), width:50, height:50 %>
      <% else %>
        <%= image_tag image_url(line_item.product.image), width:50, height:50 %>
      <% end %>
    </td>
    <td><%= line_item.product.name %></td>
    <td><%= line_item.quantity %></td>
    <td><%= number_to_currency line_item.product.price %></td>
  </tr>
<% end %>
<tr>
  <td></td>
  <td></td>
  <td></td>
  <td>Total price:</td>
  <td><b><%= number_to_currency current_cart.total_price %></b></td>
</tr>
